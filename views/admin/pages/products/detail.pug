extends ../../layouts/default.pug 

block main 
    .card 
        .card-body
            .container.mt-5
                if(product.title)
                        h1(class="mb-4 text-primary text-center") #{product.title}

                .row
                    .col-md-6
                        if(product.thumbnail)
                            div(class="mb-4 text-center")
                                img(
                                    src=product.thumbnail
                                    alt="Product Image"
                                    class="img-fluid rounded"
                                )
                    .col-md-6
                        if(product.price)
                            p(class="mb-2") Giá: 
                                b.text-success #{product.price}

                        if(product.discountPercentage)
                            p(class="mb-2") Giá giảm: 
                                b.text-danger #{product.discountPercentage}

                        if(product.stock)
                            p(class="mb-2") Số lượng: 
                                b #{product.stock}

                        if(product.description)
                            p(class="mb-2") Mô tả: 
                                span #{product.description}

                        if(product.status)
                            p(class="mb-2")
                                span Trạng thái: 
                                if(product.status === "active")
                                    span.badge.bg-success Hoạt động
                                else
                                    span.badge.bg-danger Dừng hoạt động

                        if(product.position)
                            p(class="mb-2") Vị trí: 
                                b #{product.position}

                .text-center.mt-4
                    a(
                        href=`${prefixAdmin}/products/edit/${product.id}`
                        class="btn btn-warning btn-sm"
                    ) Sửa

extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
    +alert-success(5000)
    +alert-error(5000)

    h1(class="mb-4") Chỉnh sửa nhóm quyền 

    

    form(
        action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
        method="POST"
    )
        div(class="form-group")
            label(for="title") Tên nhóm quyền
            input(
                type="text"
                id="title"
                name="title"
                class="form-control"
                value=data.title
                required
            )

        div(class="form-group")
            label(for="desc") Mô tả 
            input(
                type="text"
                id="desc"
                name="description"
                class="form-control"
                value=data.description
            )

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
